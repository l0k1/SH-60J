<?xml version="1.0"?>
<!--
Author : Syd Adams
KDI-572 DME Indicator
Modif 12/01/2011 E Teuscher
adapt switch
-->
<PropertyList>

    <path>dme.ac</path>

    <animation>
        <type>rotate</type>
        <object-name>Switch</object-name>       
             <property>instrumentation/dme/switch-position</property>
             <factor>20</factor>
            <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
            </center>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>1</z>
        </axis>
    </animation>

<!-- -hotspots -->

<animation>
    <type>pick</type>
    <visible>false</visible>
    <object-name>vor-set</object-name>
    <action>
        <button>0</button>
        <repeatable>false</repeatable>
        <binding>
                <command>nasal</command>
                <script>dmesw.dme_step(1)</script>
       </binding>
    </action>
</animation>

<animation>
    <type>pick</type>
    <visible>false</visible>
    <object-name>tacan-set</object-name>
    <action>
        <button>0</button>
        <repeatable>false</repeatable>
        <binding>
                <command>nasal</command>
                <script>dmesw.dme_step(-1)</script>
       </binding>
    </action>
</animation>

 <animation>
 <object-name>Switch</object-name>
    <object-name>Circle</object-name>
    <object-name>SwitchNut</object-name>
    <object-name>SwitchRot</object-name>
 <object-name>dmebezel</object-name>
   <type>material</type>
     <emission> 
      <factor-prop>systems/electrical/outputs/instrument-lights-norm</factor-prop>
        <red>0.50</red>
        <green>0.25</green>
        <blue>0.25</blue>
      </emission>
  </animation> 
</PropertyList>



